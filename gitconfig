[core]
  excludesfile = ~/.gitignore

[color]
  ui = auto

[help]
  autocorrect = 1

[push]
  default = simple

[alias]
  co = checkout
  br = branch
  ls = log --graph --stat --date=relative --pretty=format:"%C(yellow)%h\\ %C(green)%ad\\ %C(blue)%aN%C(auto)%d%n\\ %C(reset)%s%n"
  lsp = log --graph --stat --patch --date=relative --pretty=format:"%C(yellow)%h\\ %C(green)%ad\\ %C(blue)%aN%C(auto)%d%n\\ %C(reset)%s%n"
